<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <title>Book Notes</title>
</head>
<body>
    <%- include('partials/header.ejs') %>

<div class="box">
   
    <div class="book-slider">
        <button class="arrow left-arrow" onclick="slide(-1)">&#10094;</button> <!-- Left arrow -->

        <div class="book-container">
            <ul class="book-list">
                <% listItems.forEach(book => { %>
                    <li class="book-item">
                        <img src="<%= book.cover_url %>" alt="<%= book.title %> cover">
                        <h2><%= book.title %> by <%= book.author %></h2>
                        <button class="view" onclick='openModal({title: "<%= book.title %>", cover_url: "<%= book.cover_url %>", notes: "<%= book.notes %>"})'>View</button>
                        <div class="notes-container" style="display: none;">
                            <p><%= book.notes %></p>
                        </div>
                        <form action="/delete" method="post">
                            <input type="hidden" name="deleteItemId" value="<%= book.id %>">
                            <button class="dlt" type="submit">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </div>

        <button class="arrow right-arrow" onclick="slide(1)">&#10095;</button> <!-- Right arrow -->
    </div>
    <div>
        <a href="/add">Add a new book</a>
    </div>
</div>

<div class="box2">
    <h1>Book Wish-List</h1>
    <div class="book-slider">
        <button class="arrow left-arrow" onclick="slide(-1)">&#10094;</button> <!-- Left arrow -->

        <div class="book-container">
            <ul class="book-list">
                <% booksToRead.forEach(book => { %> <!-- Corrected to use booksToRead -->
                    <li class="book-item">
                        <img src="<%= book.cover_url %>" alt="<%= book.title %> cover">
                        <h2><%= book.title %> by <%= book.author %></h2>
                        <button class="view" onclick='openModal({title: "<%= book.title %>", cover_url: "<%= book.cover_url %>", notes: "<%= book.notes %>"})'>View</button> 
                        <div class="notes-container" style="display: none;">
                            <p><%= book.notes %></p>
                        </div>
                        <form action="/delete-book-to-read" method="post">
                            <input type="hidden" name="deleteItemId" value="<%= book.id %>">
                            <button class="dlt" type="submit">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </div>

        <button class="arrow right-arrow" onclick="slide(1)">&#10095;</button> <!-- Right arrow -->
    </div>
    <div>
        <a href="/add-book">Add a new book</a>
    </div>
</div>
<!-- Modal Structure -->
<div id="bookModal" class="modal">
    <div class="modal-content">
        <span class="close-button" onclick="closeModal()">&times;</span>
        <h2 id="modalBookTitle"></h2>
        <img id="modalBookCover" src="" alt="Cover" />
        <p id="modalBookDescription"></p>
    </div>
</div>


<script>
// Get all book sliders on the page
const bookSliders = document.querySelectorAll('.book-slider');

bookSliders.forEach(slider => {
    const bookContainer = slider.querySelector('.book-container');
    const bookItemWidth = 200 + 10; // Width of book item + gap
    
    // Attach event listener to left arrow
    slider.querySelector('.left-arrow').addEventListener('click', () => {
        bookContainer.scrollBy({
            left: -bookItemWidth, // Scroll to the left by one item width
            behavior: 'smooth' // Smooth scrolling
        });
    });

    // Attach event listener to right arrow
    slider.querySelector('.right-arrow').addEventListener('click', () => {
        bookContainer.scrollBy({
            left: bookItemWidth, // Scroll to the right by one item width
            behavior: 'smooth' // Smooth scrolling
        });
    });
});


function openModal(book) {
    document.getElementById("modalBookTitle").innerText = book.title;
    document.getElementById("modalBookCover").src = book.cover_url;
    document.getElementById("modalBookDescription").innerText = book.notes; // Assuming `notes` contains the description
    document.getElementById("bookModal").style.display = "block";
    document.body.style.overflow = "hidden";
}

function closeModal() {
    document.getElementById("bookModal").style.display = "none";
    document.body.style.overflow = "";
}

// To close the modal when clicking outside of the modal content
window.onclick = function(event) {
    const modal = document.getElementById("bookModal");
    if (event.target === modal) {
        closeModal();
    }
}

</script>
</body>
</html>
